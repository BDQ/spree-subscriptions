<h1><%= t("my_account") %></h1>
<table>
  <tr>
    <td><%= t("email") %>:</td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
</table>
<%= link_to t('edit'), edit_object_url %>

<h1><%= t("my_subscriptions") %></h1>

<table class="order-summary" width="545">
  <thead>
    <tr>
      <th><%= t("subscription_number") %></th>
      <th><%= t("status") %></th>
      <th><%= t("interval") %></th>
      <th><%= t("start_date") %></th>
      <th><%= t("end_date") %></th>
      <th><%= t("total") %></th>
    </tr>
  </thead>
  <tbody>
  <% @user.subscriptions.each do |subscription| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to subscription.id, subscription_url(subscription) %></td>
      <td><%= t(subscription.state).titleize %></td>
      <td><%= subscription.duration %> <%= subscription.interval %></td>
      <td><%= subscription.start_date.nil? ? "-" : subscription.start_date.to_date %></td>
      <td><%= subscription.end_date.nil? ? "-" : subscription.end_date.to_date %></td>
      <td><%= number_to_currency subscription.variant.price %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1><%= t("my_orders") %></h1>
 
 
<table class="order-summary" width="545">
  <thead>
    <tr>
      <th><%= t("order_number") %></th>
      <th><%= t("order_date") %></th>
      <th><%= t("status") %></th>
      <th><%= t("customer") %></th>
      <th><%= t("total") %></th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to order.number, order_url(order) %></td>
      <td><%=order.created_at.to_date%></td>
      <td><%= t(order.state).titleize %></td>
      <td><%= order.user.email if order.user %></td>
      <td><%= number_to_currency order.total %></td>
    </tr>
  <% end %>
  </tbody>
</table>
 
<br />
